<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:id="@+id/surnameTextView"
        android:layout_below="@+id/nameTextView"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_above="@+id/radioPatientGroup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET"
        android:id="@+id/btSend"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST"
        android:id="@+id/btPost"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:id="@+id/spacing"
        android:layout_below="@+id/btSend" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"

        android:id="@+id/radioPatientGroup"
        android:layout_below="@+id/spacing"
        android:layout_alignParentStart="true">

        <RadioButton
            android:button ="@drawable/justinfo_icon"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Info"
            android:clickable="true"
            android:id="@+id/info_rb" />

        <RadioButton
            android:button="@drawable/ok_icon"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Good"
            android:id="@+id/good_rb"/>
        <RadioButton
            android:button="@drawable/care_icon"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:id="@+id/care_rb"
            android:text="Care"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescr"
        android:layout_below="@id/radioPatientGroup"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/radioPatientGroup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPatDescr"
        android:hint="Wpisz opis stanu pacjenta"
        android:visibility="invisible"
        android:layout_below="@+id/radioPatientGroup"
        android:layout_alignParentStart="false"
        android:textColorHint="@color/accent_material_dark"
        android:gravity="top"
        android:layout_weight="1" />

</RelativeLayout>